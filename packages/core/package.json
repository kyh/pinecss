{
  "name": "heartwood",
  "version": "0.0.1",
  "keywords": [],
  "description": "A classless micro CSS library",
  "main": "src/plugin.js",
  "style": "style/heartwood.css",
  "repository": {
    "type": "git",
    "url": "https://github.com/kyh/heartwood",
    "directory": "packages/core"
  },
  "author": "Kaiyu Hsu @kyh",
  "license": "MIT",
  "scripts": {
    "dev": "start-storybook -p 6006",
    "prebuild": "npm run clean",
    "build": "concurrently \"npm:build:*\"",
    "build:dev": "postcss ./src/heartwood.css -o ./style/heartwood.css",
    "build:prod": "NODE_ENV=production postcss ./src/heartwood.css -o ./style/heartwood.min.css --no-map",
    "prepublish": "npm run build",
    "clean": "rimraf ./style",
    "build-storybook": "build-storybook"
  },
  "devDependencies": {
    "@babel/core": "^7.16.5",
    "@storybook/addon-actions": "^6.4.14",
    "@storybook/addon-essentials": "^6.4.14",
    "@storybook/addon-links": "^6.4.14",
    "@storybook/addon-postcss": "^2.0.0",
    "@storybook/react": "^6.4.14",
    "@tailwindcss/forms": "^0.5.0",
    "autoprefixer": "^10.4.0",
    "babel-loader": "^8.2.3",
    "cssnano": "^5.0.13",
    "postcss": "^8.4.5",
    "postcss-cli": "^10.0.0",
    "postcss-import": "^14.0.2",
    "react": "^18.2.0",
    "tailwindcss": "^3.1.7"
  },
  "engines": {
    "node": ">=14.0.0"
  },
  "publishConfig": {
    "access": "public"
  }
}
